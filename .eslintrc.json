{
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
    "parserOptions": {
        "ecmaVersion": 8
    },
    "rules": {
        "arrow-body-style": ["error", "as-needed"],
        "max-len": ["warn", 130],
        "space-before-function-paren": ["error", "always"],
        "comma-dangle": [ "error",
            {
            "arrays": "only-multiline",
            "objects": "only-multiline",
            "imports": "only-multiline",
            "exports": "only-multiline",
            "functions": "never"
            }
        ]
    }
}